@model HRAttendance.Models.Leave.Request.ReqRequestLeaveInfo

<div class="row">
    <div class="col-lg-4 col-md-4">
        <div class="form-group required">
            <div class="row">
                <div class="col-lg-3 col-md-3">
                    @Html.LabelFor(model => model.StartDate)
                </div>
                <div class="col-lg-9 col-md-9">
                    @Html.TextBoxFor(model => model.StartDate, "{0:yyyy-MM-dd}", new { @class = "form-control col-md-2 col-lg-2 col-sm-2 col-xs-2", type = "date", @required = true })
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-lg-3 col-md-3">
                    @Html.LabelFor(model => model.EndDate)
                </div>
                <div class="col-lg-9 col-md-9">
                    @Html.TextBoxFor(model => model.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control col-md-2 col-lg-2 col-sm-2 col-xs-2", type = "date", @required = true })
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-lg-3 col-md-3">
                    @Html.LabelFor(model => model.LeveTypeID)
                </div>
                <div class="col-lg-9 col-md-9">
                    @Html.DropDownListFor(model => model.LeveTypeID, new SelectList(Model.LeveInfos, "ID", "Name"), new { @class = "form-control col-md-2 col-lg-2 col-sm-2 col-xs-2", type = "date", @required = true })
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-lg-3 col-md-3">
                    @Html.LabelFor(model => model.Description)
                </div>
                <div class="col-lg-9 col-md-9">
                    @Html.TextAreaFor(model => model.Description, 5, 5, new { @class = "form-control" })
                </div>
            </div>

            <hr />

            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <button class="btn btn-primary" style="float : right">Apply</button> &nbsp;
                    <button class="btn btn-secondary">Reset</button> &nbsp;
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8 col-md-8">
        <div class="row" id="employee-leave">
        </div>
    </div>

</div>
